<% if authorized_user?(@goal) && !@goal.completed? %>
  <p class="control">
    <%= link_to 'Edit', edit_goal_path(@goal) %>&nbsp;&nbsp;|&nbsp;
    <%= link_to 'Destroy', @goal, method: :delete,
    data: { confirm: 'Are you sure you want to delete this goal?' } %>
  </p>
<% else %>
  <% if @goal.completed? && current_user == @user %>
    <span class="glyphicon glyphicon-ok completed" title="Completed"></span>
  <% end %>
<% end %>
