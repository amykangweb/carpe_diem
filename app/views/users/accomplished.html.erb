<div class="container recent-goals accomplished">

  <h4><strong><%= @user.username.titleize %>'s</strong> Completed Goals</h4>

  <div class="row">

  <% @goals.each do |goal| %>

    <div class="col-md-6 text-center">
      <div class="home-padding">

        <p>
          <%= link_to image_tag(goal.user.gravatar_url, class: 'avatar'), goal.user %>
        </p>

          <p class="want-to">
            <strong><%= link_to goal.user.username.titleize, goal.user %></strong>
            <%= " wants to " %>
            <strong><%= link_to goal.description, goal %></strong>
            <% if goal.private? %>
              <span class="glyphicon glyphicon-eye-close" title="Private"></span>
            <% end %>
          </p>

          <% if goal.completed? %>
            <span class="glyphicon glyphicon-ok completed" title="Completed"></span>
          <% end %>

        </div>
      </div>
  <% end %>
  </div>

  <div class="text-center">
    <p class="pagination">
      <%= will_paginate @goals, renderer: BootstrapPagination::Rails %>
    </p>
  </div>
</div>
