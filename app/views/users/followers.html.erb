<% provide(:title, "#{@user.username.titleize}'s Followers") %>
<div class="container form-page">
  <h3><strong><%= @user.username.titleize %>'s</strong> Followers</h3>
    <ul class="followers">
      <% if !@user.blank? %>

        <% @user.followers.each do |user| %>
          <li>
            <%= link_to user.username.titleize, user %>
          </li>
        <% end %>

      <% else %>
        <li>
          Nothing here.
        </li>
      <% end %>
    </ul>
</div>
